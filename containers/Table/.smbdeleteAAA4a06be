import React from 'react';
import { Link } from 'react-router';

class UXTableItemPicture extends React.Component {

    render(){

        const style = Object.assign({
            display: 'block',
            width: 50,
            height: 50,
            backgroundImage: 'linear-gradient(135deg,#70929c,#846170)'
        }, this.props.style);

        if(typeof(this.props.image) !== 'undefined')
        style.backgroundImage = 'url(' + this.props.image + ')';

        return (
            <div className="uxtable-item-picture">
                <span className="uxtable-item-picture--img" style={style} />
            </div>
        );
    }

}

UXTableItemPicture.propTypes = {
    image: React.PropTypes.string.isRequired
}

export default UXTableItemPicture;
